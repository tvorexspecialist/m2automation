<listing
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd"
        component="Magento_Ui/js/lib/core/element/element-with-buttons"
>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">variables_modal.variables_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/listing/default_with_buttons</item>
        <item name="config" xsi:type="array">
            <item name="buttons" xsi:type="array">
                <item name="0" xsi:type="array">
                    <item name="text" xsi:type="string">Insert Variable</item>
                    <item name="class" xsi:type="string">action-primary</item>
                    <item name="targetName" xsi:type="string">${ $.name }</item>
                    <item name="actionName" xsi:type="string">actionDone</item>
                </item>
            </item>
        </item>

    </argument>
    <settings>
        <buttons>
            <button name="insert" class="Magento\Catalog\Block\Adminhtml\Product\Edit\Button\AddAttribute"/>
        </buttons>
        <spinner>variables</spinner>
        <deps>
            <dep>variables_modal.variables_data_source</dep>
        </deps>
    </settings>
    <dataSource name="variables_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">code</param>
            </storageConfig>

            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Variable\Ui\Component\VariablesDataProvider"
                      name="variables_data_source">
            <settings>
                <requestFieldName>code</requestFieldName>
                <primaryFieldName>code</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
    </listingToolbar>
    <columns name="variables">
        <column name="variable_selector" component="Magento_Ui/js/grid/columns/radioselect">
            <settings>
                <label>Select</label>
            </settings>
        </column>
        <column name="variable_name">
            <settings>
                <label translate="true">Variable Name</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <column name="variable_type">
            <settings>
                <filter>text</filter>
                <label translate="true">Type</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="code">
            <settings>
                <label translate="true">Code</label>
                <sortable>false</sortable>
            </settings>
        </column>
    </columns>
</listing>
