?>
<div class="multicheckout success">
    <h2 class="subtitle"><?= $block->escapeHtml(__('Thank you for your purchase!')) ?></h2>
    <p><?= $block->escapeHtml(__('Thanks for your order. We\'ll email you order details and tracking information.')) ?></p>
    <?php if ($_orderIds = $block->getOrderIds()): ?>
    <p class="order-number">
        <?php $flag = false ?>
        <span>
            <?php if (count($_orderIds) > 1): ?>
                <?= $block->escapeHtml(__('Your order numbers are: ')) ?>
            <?php else : ?>
                <?= $block->escapeHtml(__('Your order number is: ')) ?>
            <?php endif; ?>
        </span>
        <?php foreach ($_orderIds as $orderId => $incrementId): ?><?php if ($flag): ?><?= ', ' ?><?php endif; ?><?php $flag = true ?><a href="<?= /* @escapeNotVerified */ $block->getViewOrderUrl($orderId) ?>"><?= /* @escapeNotVerified */ $incrementId ?></a><?php endforeach; ?>
    </p>
    <?php endif; ?>
    <?= $block->getChildHtml() ?>

    <?php $failedAddresses = $block->getCheckoutData()->getShippingAddresses() ?>
    <?php if (count($failedAddresses) > 0): ?>
        <div class="actions">
            <a class="action continue" title="<?= $block->escapeHtml(__('Back to Order Review')) ?>" href="<?= /* @escapeNotVerified */ $block->getUrl('*/*/overview') ?>"><span><?= $block->escapeHtml(__('Back to Order Review')) ?></span></a>
        </div>
        <h3>Failed addresses:</h3>
        <?php foreach ($failedAddresses as $address): ?>
            <b style="color:red"><?= /* @noEscape */ $block->getCheckoutData()->getAddressError($address); ?></b><br/>
            <?= /* @noEscape */ $block->getCheckoutData()->getAddressHtml($address); ?>
            <br/><br/>
        <?php endforeach; ?>
        <br/><br/>
    <?php endif; ?>

    <div class="actions">
        <a class="action continue" title="<?= $block->escapeHtml(__('Continue Shopping')) ?>" href="<?= /* @escapeNotVerified */ $block->getContinueUrl() ?>"><span><?= $block->escapeHtml(__('Continue Shopping')) ?></span></a>
    </div>
</div>
