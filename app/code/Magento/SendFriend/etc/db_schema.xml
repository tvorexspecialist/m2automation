<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:setup:Model/Declaration/Schema/etc/schema.xsd">
  <table name="sendfriend_log" resource="default">
    <column xsi:type="int" name="log_id" padding="10" unsigned="true" nullable="false" identity="true"/>
    <column xsi:type="bigint" name="ip" padding="20" unsigned="true" nullable="false" identity="false" default="0"/>
    <column xsi:type="int" name="time" padding="10" unsigned="true" nullable="false" identity="false" default="0"/>
    <column xsi:type="smallint" name="website_id" padding="5" unsigned="true" nullable="false" identity="false" default="0"/>
    <constraint xsi:type="primary" name="PRIMARY">
      <column name="log_id"/>
    </constraint>
    <index name="SENDFRIEND_LOG_IP" indexType="btree">
      <column name="ip"/>
    </index>
    <index name="SENDFRIEND_LOG_TIME" indexType="btree">
      <column name="time"/>
    </index>
  </table>
</schema>
