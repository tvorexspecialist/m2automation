<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:setup:Model/Declaration/Schema/etc/schema.xsd">
  <table name="captcha_log" resource="default">
    <column xsi:type="varchar" name="type" nullable="false" length="32"/>
    <column xsi:type="varchar" name="value" nullable="false" length="32"/>
    <column xsi:type="int" name="count" padding="10" unsigned="true" nullable="false" identity="false" default="0"/>
    <column xsi:type="timestamp" name="updated_at" on_update="false" nullable="true"/>
    <constraint xsi:type="primary" name="PRIMARY">
      <column name="type"/>
      <column name="value"/>
    </constraint>
  </table>
</schema>
