        <field xsi:type="ScalarOutputField" name="page_layout" type="String" description="The page layout of the product page. Values include '1column-center', '2columns-left', '2columns-right', and '3columns'."/>
        <field xsi:type="ScalarArrayOutputField" name="category_ids" itemType="Int" description="An array of category IDs the product belongs to."/>
        <field xsi:type="ScalarOutputField" name="options_container" type="String" description="If the product has multiple options, determines where they appear on the product page."/>
        <field xsi:type="ScalarOutputField" name="image_label" type="String" description="The label assigned to a product image."/>
