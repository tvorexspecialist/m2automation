        <field xsi:type="ScalarOutputField" name="small_image" type="String" description="The file name of a small image, which is used on catalog pages."/>
        <field xsi:type="ScalarOutputField" name="thumbnail" type="String" description="The file name of a thumbnail image"/>
        <field xsi:type="ScalarOutputField" name="new_from_date" type="String" description="The beginning date for new product listings, and determines if the product is featured as a new product. Note: The input attribute name is 'news_from_date'."/>
        <field xsi:type="ScalarOutputField" name="new_to_date" type="String" description="The end date for new product listings.  Note: The input attribute name is 'news_to_date'."/>
