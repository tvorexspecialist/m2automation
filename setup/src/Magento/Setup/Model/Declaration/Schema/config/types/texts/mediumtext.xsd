<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:include schemaLocation="urn:magento:setup:Model/Declaration/Schema/config/types/column.xsd"/>

    <xs:complexType name="mediumtext">
        <xs:annotation>
            <xs:documentation>
                Here plain text can be persisted. Length of this field is more than 65536 characters
                and less than 16777216
            </xs:documentation>
        </xs:annotation>

        <xs:attributeGroup ref="baseColumn" />
        <xs:attribute name="length">
            <xs:simpleType>
                <xs:restriction base="xs:integer">
                    <xs:minInclusive value="65536"/>
                    <xs:maxExclusive value="16777216"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
