<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/mtf/etc/variations.xsd">
    <testCase name="Magento\Checkout\Test\TestCase\OnePageCheckoutFromMiniShoppingCartDeclinedTest" summary="One page check out with Braintree payment method from mini shopping cart.">
        <variation name="OnePageCheckoutFromMiniShoppingCartBraintreeDeclinedTestVariation1" summary="Checkout with Braintree Credit Card with specific allowed credit card types" ticketId="MAGETWO-38400">
            <data name="products/0" xsi:type="string">catalogProductSimple::product_10_dollar</data>
            <data name="customer/dataset" xsi:type="string">default</data>
            <data name="shippingAddress/dataset" xsi:type="string">US_address_1_without_email</data>
            <data name="checkoutMethod" xsi:type="string">guest</data>
            <data name="shipping/shipping_service" xsi:type="string">Flat Rate</data>
            <data name="shipping/shipping_method" xsi:type="string">Fixed</data>
            <data name="payment/method" xsi:type="string">braintree</data>
            <data name="creditCard/data/payment_code" xsi:type="string">braintree</data>
            <data name="creditCard/dataset" xsi:type="string">master_default</data>
            <data name="expectedErrorMessage" xsi:type="string">Please, enter valid Credit Card Number</data>
            <data name="configData" xsi:type="string">braintree, braintree_cctypes_AE_VI</data>
            <data name="tag" xsi:type="string">test_type:3rd_party_test, severity:S1</data>
            <constraint name="Magento\Braintree\Test\Constraint\AssertCreditCardJsValidationMessagesIsPresent" />
        </variation>
    </testCase>
</config>
