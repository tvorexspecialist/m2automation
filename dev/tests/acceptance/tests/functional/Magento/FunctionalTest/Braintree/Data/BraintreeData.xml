    <entity name="DefaultMerchantId" type="merchant_id">
        <data key="value"/>
    </entity>
    <entity name="DefaultPublicKey" type="public_key">
        <data key="value"/>
    </entity>
    <entity name="DefaultPrivateKey" type="private_key">
        <data key="value"/>
